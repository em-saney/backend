<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do App</title>
    <link rel="stylesheet" href="/styles.css">

</head>

<body>
    <h1>To-Do List</h1>
    
    <form action="/add" method="post">
        <input id="text" name="newTask" placeholder="Enter your task" required>
        <button type="submit">Create Task</button>
    </form>

    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <%= task %>
                <a href="/edit/<%= encodeURIComponent(task) %>">Edit</a>
                <a href="/delete/<%= encodeURIComponent(task) %>">Delete</a>
            </li>
        <% }); %>
    </ul>
</body>

</html>
